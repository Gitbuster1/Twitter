<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    <%= button_to "Delete", user, method: :delete, class: "btn btn-danger",
                  id: "delete_user", form: { data: { turbo_confirm: 'Are you sure?' } } %>
  <% end %>
</li>